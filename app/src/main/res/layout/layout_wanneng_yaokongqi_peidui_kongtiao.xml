<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29pt"
        android:layout_marginTop="29pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="注："
            android:textColor="#FC0100"
            android:textSize="27pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="已配对按键为蓝色"
            android:textColor="@color/text_color6"
            android:textSize="27pt" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="54pt"
        android:layout_marginTop="85pt">


        <TextView
            android:id="@+id/ll_zidingyi"
            android:layout_width="146pt"
            android:layout_height="146pt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18pt"
            android:background="@mipmap/yaokong_bg_round_gradual_2"
            android:gravity="center"
            android:text="自定义"
            android:textColor="@color/text_color3"
            android:textSize="33pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="146pt"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_zidingyi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3pt"
            android:gravity="center"
            android:text="自定义按钮"
            android:textColor="@color/text_color3"
            android:textSize="27pt"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_dianyuan"
            android:layout_width="146pt"
            android:layout_height="146pt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18pt"
            android:background="@mipmap/yaokong_bg_round_gradual_2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_dianyuan"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:src="@mipmap/yaokong_icon_guanbi" />
        </LinearLayout>

        <TextView
            android:layout_width="146pt"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_dianyuan"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3pt"
            android:gravity="center"
            android:text="ON"
            android:textColor="@color/text_color3"
            android:textSize="27pt"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_moshi"
            android:layout_width="146pt"
            android:layout_height="146pt"
            android:layout_marginTop="18pt"
            android:background="@mipmap/yaokong_bg_round_gradual_2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_moshi"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:src="@mipmap/yaokong_icon_moshi_grey" />
        </LinearLayout>

        <TextView
            android:layout_width="146pt"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_moshi"
            android:layout_marginTop="3pt"
            android:gravity="center"
            android:text="模式"
            android:textColor="@color/text_color3"
            android:textSize="27pt"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_marginHorizontal="54pt"
        android:layout_marginTop="40pt">

        <LinearLayout
            android:id="@+id/ll_fengsu"
            android:layout_width="146pt"
            android:layout_height="146pt"
            android:layout_marginTop="18pt"
            android:background="@mipmap/yaokong_bg_round_gradual_2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_fengsu"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:src="@mipmap/yaokong_icon_fengsu_grey" />
        </LinearLayout>

        <TextView
            android:layout_width="146pt"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_fengsu"
            android:layout_marginTop="3pt"
            android:gravity="center"
            android:text="风速"
            android:textColor="@color/text_color3"
            android:textSize="27pt"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="146pt"
            android:layout_height="393pt"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/yaokong_bg_roundedrectangle_2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="温度"
                android:textColor="@color/text_color3"
                android:textSize="27pt"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_wendu_add"
                android:layout_width="146pt"
                android:layout_height="146pt"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tv_wendu_add"
                    android:layout_width="46pt"
                    android:layout_height="46pt"
                    android:layout_marginTop="10pt"
                    android:src="@mipmap/yaokong_icon_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wendu_jian"
                android:layout_width="146pt"
                android:layout_height="146pt"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tv_wendu_jian"
                    android:layout_width="46pt"
                    android:layout_height="46pt"
                    android:layout_marginBottom="10pt"
                    android:src="@mipmap/yaokong_icon_reduce" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_fengxiang"
            android:layout_width="146pt"
            android:layout_height="146pt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18pt"
            android:background="@mipmap/yaokong_bg_round_gradual_2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_fengxiang"
                android:layout_width="46pt"
                android:layout_height="42dp"
                android:src="@mipmap/yaokong_icon_fengxiang_grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_fengxiang"
            android:layout_width="146pt"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_fengxiang"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3pt"
            android:gravity="center"
            android:text="风向"
            android:textColor="@color/text_color3"
            android:textSize="27pt"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_off"
            android:layout_width="146pt"
            android:layout_height="146pt"
            android:layout_below="@+id/tv_fengxiang"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18pt"
            android:background="@mipmap/yaokong_bg_round_gradual_2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_off"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:src="@mipmap/yaokong_icon_guanbi" />
        </LinearLayout>

        <TextView
            android:layout_width="146pt"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_off"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3pt"
            android:gravity="center"
            android:text="OFF"
            android:textColor="@color/text_color3"
            android:textSize="27pt"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>