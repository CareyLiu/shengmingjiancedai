<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayfff5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:paddingLeft="19dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="211dp"
            android:layout_height="211dp"
            android:background="@mipmap/shoudong_pic_air" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/iv_pic"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_dianyuan"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_dianyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="电源"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_wendu_add"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_wendu_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="温度加"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_wendu_jian"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_wendu_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="温度减"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_fengsu_add"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_fengsu_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="风速加"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_fengsu_jian"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_fengsu_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="风速减"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>