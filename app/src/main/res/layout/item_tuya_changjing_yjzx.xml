<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_device_info"
        android:layout_width="317pt"
        android:layout_height="211pt"
        android:layout_marginLeft="29pt"
        android:layout_marginBottom="29pt"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="29pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:src="@mipmap/tuya_icon_switch_dingshi" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:src="@mipmap/def_more" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="设备信息"
            android:textColor="@color/color_3"
            android:textSize="31pt" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/color_3"
            android:textSize="31pt" />
    </LinearLayout>
</LinearLayout>
