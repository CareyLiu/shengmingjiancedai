<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01212B"

    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80pt"
        android:background="@color/white">


        <RelativeLayout
            android:layout_marginLeft="5pt"
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="18pt"
                android:layout_height="30pt"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20pt"
                android:src="@mipmap/black_back" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="风暖加热器"
            android:textColor="@color/black"
            android:textSize="35pt" />

        <ImageView
            android:id="@+id/iv_shezhi"
            android:layout_width="46pt"
            android:layout_height="46pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20pt"
            android:src="@mipmap/fengnuan_icon_shezhi" />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextSizeTime="10sp"
                app:srlTextSizeTitle="12sp" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1158pt"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="590pt">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="603pt"
                            android:src="@mipmap/fengnuan_back">

                        </ImageView>

                        <RelativeLayout
                            android:layout_width="487pt"
                            android:layout_height="409pt"
                            android:layout_marginTop="13pt"
                            android:background="@mipmap/dipan">

                            <ImageView
                                android:id="@+id/iv_kaiji"
                                android:layout_width="365pt"
                                android:layout_height="252pt"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="57pt"
                                android:src="@drawable/fengnuan_kaiji" />

                            <ImageView
                                android:id="@+id/iv_guanji"
                                android:layout_width="365pt"
                                android:layout_height="252pt"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="57pt"
                                android:src="@mipmap/fegnnuan_guanji" />

                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/ll_click_shebeima"
                            android:layout_width="167pt"
                            android:layout_height="66pt"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="34pt"
                            android:layout_marginRight="17pt"
                            android:background="@mipmap/fengnuan_button_shebeima"
                            android:orientation="vertical" />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_click_shebeima"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="37pt"
                            android:layout_marginRight="25pt">

                            <LinearLayout
                                android:id="@+id/ll_dingshi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="30pt"
                                    android:layout_height="30pt"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/fengnuan_icon_dingshi" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12pt"
                                    android:text="定时"
                                    android:textColor="#23CEFD"
                                    android:textSize="26pt" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_xinhao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll_dingshi"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="30pt"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/iv_xinhao"
                                    android:layout_width="30pt"
                                    android:layout_height="30pt"
                                    android:layout_gravity="center_vertical" />

                                <TextView
                                    android:id="@+id/tv_zaixian"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12pt"
                                    android:layout_marginBottom="1pt"
                                    android:text="在线"
                                    android:textColor="#23CEFD"
                                    android:textSize="26pt" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_fuwu_tianshu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll_xinhao"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="30pt"
                                android:gravity="center_vertical"
                                android:visibility="gone">


                                <TextView
                                    android:id="@+id/tv_gongzuo_shichang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="工作时长：0天"
                                    android:textColor="#23CEFD"
                                    android:textSize="26pt" />
                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll_fuwu_tianshu"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="30pt"
                                android:gravity="center_vertical">


                                <TextView
                                    android:id="@+id/tv_shebeizhuangtai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="设备状态：连接中"
                                    android:textColor="#ffffffff"
                                    android:textSize="27pt"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="111pt"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="19pt">


                            <ImageView
                                android:id="@+id/iv_dangweimoshi"
                                android:layout_width="307pt"
                                android:layout_height="111pt">

                            </ImageView>

                            <ImageView
                                android:id="@+id/iv_kongtiaomoshi"
                                android:layout_width="307pt"
                                android:layout_height="111pt"
                                android:layout_marginLeft="30pt">

                            </ImageView>


                        </LinearLayout>


                    </RelativeLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_gongneng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20pt"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <RelativeLayout
                                android:layout_width="200pt"
                                android:layout_height="75pt"
                                android:background="@mipmap/fengnuan_pic_switch_smal">

                                <TextView
                                    android:id="@+id/tv_shuibeng"
                                    android:layout_width="200pt"
                                    android:layout_height="75pt"
                                    android:gravity="center"
                                    android:text="水泵"
                                    android:textColor="#999999"
                                    android:textSize="31pt" />


                            </RelativeLayout>


                            <TextView
                                android:id="@+id/tv_yutongfeng"
                                android:layout_width="200pt"
                                android:layout_height="75pt"
                                android:layout_marginLeft="24pt"
                                android:background="@mipmap/fengnuan_pic_switch_smal"
                                android:gravity="center"
                                android:text="预通风"
                                android:textColor="#999999"
                                android:textSize="31pt" />

                            <TextView
                                android:id="@+id/tv_zidongbengyou"
                                android:layout_width="200pt"
                                android:layout_height="75pt"
                                android:layout_marginLeft="24pt"
                                android:background="@mipmap/fengnuan_pic_switch_smal"
                                android:gravity="center"
                                android:text="自动泵油"
                                android:textColor="#999999"
                                android:textSize="31pt" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_wendu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50pt"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/ll_gongneng">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="31pt"
                                    android:layout_height="31pt"
                                    android:src="@mipmap/fengnuan_pic_wendu_small" />

                                <TextView
                                    android:id="@+id/tv_dangqian_wendu_or_dangwei"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12pt"
                                    android:text="当前温度/档位: - -"
                                    android:textColor="#ffffffff"
                                    android:textSize="31pt" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="112pt"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="31pt"
                                    android:layout_height="31pt"
                                    android:src="@mipmap/fengnuan_pic_wendu_small" />

                                <TextView
                                    android:id="@+id/tv_sheding_wendu_or_dangwei"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12pt"
                                    android:text="设定温度/档位: - -"
                                    android:textColor="#ffffffff"
                                    android:textSize="31pt" />
                            </LinearLayout>

                        </LinearLayout>


                        <SeekBar
                            android:id="@+id/seekBar1"
                            android:layout_width="614pt"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="31pt"
                            android:background="@color/transparent"
                            android:max="100"
                            android:maxHeight="12pt"
                            android:minHeight="12pt"
                            android:progress="0"
                            android:progressDrawable="@drawable/seekbar_img"
                            android:secondaryProgress="100"
                            android:thumb="@drawable/shape_seekbar_btn"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ll_wendu" />

                        <SeekBar
                            android:id="@+id/seekBar_kongtiao"
                            android:layout_width="614pt"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="31pt"
                            android:background="@color/transparent"
                            android:max="32"
                            android:maxHeight="12pt"
                            android:minHeight="12pt"
                            android:progress="50"
                            android:progressDrawable="@drawable/seekbar_img"
                            android:secondaryProgress="100"
                            android:thumb="@drawable/shape_seekbar_btn"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/seekBar1" />


                        <TextView
                            android:id="@+id/tv_zuidiwendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41pt"
                            android:layout_marginTop="12pt"
                            android:text="0℃/1档"
                            android:textColor="#ffffffff"
                            android:textSize="27pt"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/seekBar_kongtiao" />

                        <TextView
                            android:id="@+id/tv_zuigaowendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:layout_marginRight="41pt"
                            android:text="32℃/5档"
                            android:textColor="#ffffffff"
                            android:textSize="27pt"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/seekBar_kongtiao" />

                        <LinearLayout
                            android:layout_width="670pt"
                            android:layout_height="211pt"
                            android:layout_marginHorizontal="25pt"
                            android:layout_marginTop="30pt"
                            android:background="@mipmap/fengnuan_bg_shuju"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_zuidiwendu">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="56pt"
                                    android:layout_marginTop="25pt"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_dianya"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--v"
                                        android:textColor="#F9B233"
                                        android:textSize="33pt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="当前电压"
                                        android:textColor="#ffffffff"
                                        android:textSize="23pt" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="25pt"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_rufengkouwendu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--℃"
                                        android:textColor="#F9B233"
                                        android:textSize="33pt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="入风口温度"
                                        android:textColor="#ffffffff"
                                        android:textSize="23pt" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="25pt"
                                    android:layout_marginRight="56pt"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_chufengkouwendu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--℃"
                                        android:textColor="#F9B233"
                                        android:textSize="33pt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="出风口温度"
                                        android:textColor="#ffffffff"
                                        android:textSize="23pt" />


                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10pt">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="56pt"


                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_haibagaodu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--m"
                                        android:textColor="#F9B233"
                                        android:textSize="33pt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="海拔高度"
                                        android:textColor="#ffffffff"
                                        android:textSize="23pt" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="56pt"


                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_hanyangliang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--kg/cm3"
                                        android:textColor="#F9B233"
                                        android:textSize="33pt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="含氧量"
                                        android:textColor="#ffffffff"
                                        android:textSize="23pt" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginRight="52pt"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_daqiya"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--kpa"
                                        android:textColor="#F9B233"
                                        android:textSize="33pt" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="大气压数值"
                                        android:textColor="#ffffffff"
                                        android:textSize="23pt" />


                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>