<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48pt"
            android:background="@drawable/chuwugui_bg_login"
            android:orientation="vertical"
            android:paddingHorizontal="19pt">

            <TextView
                android:id="@+id/tv_xiangzi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32pt"
                android:includeFontPadding="false"
                android:text="XXX-12-17 大柜"
                android:textColor="#4DB6FB"
                android:textSize="35pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15pt"
                android:includeFontPadding="false"
                android:text="XXX-12"
                android:textColor="@color/color_9"
                android:textSize="27pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3pt"
                android:layout_marginTop="20pt"
                android:layout_marginBottom="20pt"
                android:background="@drawable/chuwugui_line_xuxian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="箱子编号:"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_xiangzi_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="1号箱"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="存包时间:"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_cunbao_timw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="2012-11-18 11:00:00"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="预存时长:"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_yucun_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="2小时"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="使用时长:"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_shiyong_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="2小时30分20秒"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="已付金额:"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_yifu_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0.02元"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_daifu_money"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="待付金额:"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_daifu_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0.01元"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="付费标准:"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_biaozhun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0.01元/小时"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3pt"
                android:layout_marginTop="5pt"
                android:visibility="gone"
                android:background="@drawable/chuwugui_line_xuxian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_kaixiang"
                    android:layout_width="0dp"
                    android:layout_height="80pt"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="再次开箱"
                    android:textColor="@color/color_3"
                    android:textSize="30pt" />

                <TextView
                    android:id="@+id/bt_finish"
                    android:layout_width="0dp"
                    android:layout_height="80pt"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="停止使用"
                    android:textColor="@color/color_3"
                    android:textSize="30pt"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="168pt"
            android:layout_height="77pt"
            android:layout_gravity="right"
            android:layout_marginTop="19pt"
            android:layout_marginRight="37pt"
            android:background="@mipmap/chuwugui_biabtie"
            android:gravity="center_horizontal"
            android:paddingTop="15pt"
            android:text="使用中"
            android:textColor="@color/white"
            android:textSize="27pt" />
    </FrameLayout>
</LinearLayout>
