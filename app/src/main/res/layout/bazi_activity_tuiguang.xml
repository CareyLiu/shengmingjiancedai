<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="206dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:scaleType="fitXY"
            android:src="@mipmap/tuiguang_pic_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="95dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@mipmap/tuiguang_juxing_bg"
                android:orientation="vertical"
                android:paddingLeft="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:includeFontPadding="false"
                    android:text="近一月推广人数"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_num_yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:background="@mipmap/tuiguang_juxing_bg"
                android:orientation="vertical"
                android:paddingLeft="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:includeFontPadding="false"
                    android:text="近七日推广人数"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_num_ri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_num_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="189dp"
            android:includeFontPadding="false"
            android:text="2020-01-01"
            android:textColor="#666666"
            android:textSize="12sp" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tuiguang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1" />
</LinearLayout>
