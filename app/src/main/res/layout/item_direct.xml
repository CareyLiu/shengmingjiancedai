<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gay"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:layout_width="166dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="横版数码按键开关sdfdfsdsdfdsfsdfsf" />

        <TextView
            android:id="@+id/tv_specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_alignStart="@+id/tv_goods_name"
            android:layout_alignLeft="@+id/tv_goods_name"
            android:layout_marginTop="10dp"
            android:text="（套餐1）" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_specs"
            android:layout_alignStart="@+id/tv_specs"
            android:layout_alignLeft="@+id/tv_specs"
            android:layout_marginTop="12dp"
            android:text="￥12.00" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_alignStart="@+id/tv_price"
            android:layout_alignLeft="@+id/tv_price"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/shangxin" />

        <ImageView

            android:id="@+id/iv_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            tools:background="@color/oranger" />


    </RelativeLayout>


</RelativeLayout>
