<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.smarthome.magic.view.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75pt"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_shouye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shouye"
                android:layout_width="29pt"
                android:layout_height="29pt"
                android:src="@mipmap/chuwugui_main_shouye_s" />

            <TextView
                android:id="@+id/tv_shouye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="首页"
                android:textColor="#4F94F1"
                android:textSize="19pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wode"
                android:layout_width="29pt"
                android:layout_height="29pt"
                android:src="@mipmap/chuwugui_main_wd_n" />

            <TextView
                android:id="@+id/tv_wode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="我的"
                android:textColor="@color/color_9"
                android:textSize="19pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
