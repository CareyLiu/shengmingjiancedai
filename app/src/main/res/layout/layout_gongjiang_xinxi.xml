<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:srlTextSizeTime="10sp"
            app:srlTextSizeTitle="12sp" />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/rl_item"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:background="@color/white">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_image"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/grayeeeeeee" />

                    <TextView
                        android:id="@+id/tv_gongjiang_ming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/iv_image"
                        android:includeFontPadding="false"
                        android:text="天成家居美容"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_tag"
                        android:layout_width="200dp"
                        android:layout_height="19dp"
                        android:layout_below="@+id/tv_gongjiang_ming"
                        android:layout_alignLeft="@+id/tv_gongjiang_ming"
                        android:layout_marginTop="11dp"
                        android:layout_toRightOf="@+id/iv_image"
                        android:background="@color/grayeeeeeee"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_tag"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/iv_image"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gongjiang_pic_weizhi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="3.0km"
                            android:textColor="#ff000000"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/gongjiang_pic_yirenzheng" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="398dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@color/grayeeeeeee">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="哈尔滨天成家居美容服务，专业维修高档法式家具"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="15dp">

        <com.flyco.roundview.RoundRelativeLayout
            android:id="@+id/rl_dadianhua"
            android:layout_width="77dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:rv_backgroundColor="#FA7E00"
            app:rv_cornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="打电话"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </com.flyco.roundview.RoundRelativeLayout>

        <com.flyco.roundview.RoundRelativeLayout
            android:id="@+id/rl_jiaweixin"
            android:layout_width="77dp"
            android:layout_height="48dp"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            app:rv_backgroundColor="#05D083"
            app:rv_cornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="加微信"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </com.flyco.roundview.RoundRelativeLayout>

        <com.flyco.roundview.RoundRelativeLayout
            android:id="@+id/rl_yuefuwu"
            android:layout_width="77dp"
            android:layout_height="48dp"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:rv_backgroundColor="#3A85F8"
            app:rv_cornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="约服务"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </com.flyco.roundview.RoundRelativeLayout>

        <com.flyco.roundview.RoundRelativeLayout
            android:id="@+id/rl_fenxiang"
            android:layout_width="77dp"
            android:layout_height="48dp"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            app:rv_backgroundColor="#FF5100"
            app:rv_cornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="分享"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </com.flyco.roundview.RoundRelativeLayout>
    </LinearLayout>
</RelativeLayout>