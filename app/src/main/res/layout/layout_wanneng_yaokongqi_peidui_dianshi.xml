<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayfff5f5f5">

    <RelativeLayout
        android:id="@+id/rl_top_view"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="211dp"
            android:layout_height="211dp"
            android:background="@mipmap/shoudong_pic_sos" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/iv_pic"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_dianyuan"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_dianyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="电源"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_yinliang_add"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_yinliang_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="音量加"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_yinliang_jian"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_yinliang_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="音量减"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_pindao_add"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_pindao_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="频道加"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_peidui_pindao_jian"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/tuya_faxian_icon_selector_sel" />

                <TextView
                    android:id="@+id/tv_peidui_pindao_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="频道减"
                    android:textColor="@color/text_color_9"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="176dp"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/yaokong_bg_roundedrectangle"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_yinliangjia"
                android:layout_width="65dp"
                android:layout_height="69dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/yaokong_icon_add" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yinliang_jia_mengban"
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:background="@mipmap/yaokong_bg_roundedrectangle_gradual_up">

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_yinliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="音量"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yinliangjian"
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/yaokong_icon_reduce" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_yinliang_jian_mengban"
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/yaokong_bg_roundedrectangle_gradual_down"></RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="156dp"
            android:layout_height="176dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/yaokong_bg_round">

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/yaokong_icon_guanbi" />

            <ImageView
                android:id="@+id/iv_kaiguan_mengban"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/yaokong_bg_round_gradual">

            </ImageView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="176dp"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/yaokong_bg_roundedrectangle"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_pindaojia"
                android:layout_width="65dp"
                android:layout_height="69dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/yaokong_icon_add" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pindao_jia_mengban"
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:background="@mipmap/yaokong_bg_roundedrectangle_gradual_up">

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_pindao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="频道"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pindaojian"
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/yaokong_icon_reduce" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_pindao_jian_mengban"
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/yaokong_bg_roundedrectangle_gradual_down"></RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>