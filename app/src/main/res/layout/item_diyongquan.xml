<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constrain"
    android:background="@color/transparent">


    <com.flyco.roundview.RoundRelativeLayout
        android:id="@+id/rlv_main"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:includeFontPadding="false"
                android:text="￥25"
                android:textColor="#fffc0100"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/tv_renyijine"
                app:layout_constraintRight_toRightOf="@+id/tv_renyijine"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_renyijine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="12dp"
                android:includeFontPadding="false"
                android:text="满任意金额可用"
                android:textColor="#ff111111"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_money" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="稻花香专享"
                android:textColor="#ff111111"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/tv_money"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:includeFontPadding="false"
                android:text="2020-11-12到期"
                android:textColor="#ff111111"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_shengyu_cishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:includeFontPadding="false"
                android:text="剩余30次"
                android:textColor="#ff111111"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_date" />


            <com.flyco.roundview.RoundTextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="使用"
                android:textColor="#fffefefe"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rv_backgroundColor="#fffc0100"
                app:rv_cornerRadius="10dp"
                tools:text="不可使用" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.flyco.roundview.RoundRelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>