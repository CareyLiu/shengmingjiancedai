<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bazi_renzheng"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="提示"
            android:textColor="@color/black_333333"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:includeFontPadding="false"
            android:paddingHorizontal="30dp"
            android:text="绑定主机需校验您的手机，请输入您的验证码"
            android:textColor="@color/black_666666"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.flyco.roundview.RoundRelativeLayout
                android:layout_centerVertical="true"
                app:rv_cornerRadius="25dp"
                app:rv_backgroundColor="@color/grayeeeeeee"
                android:layout_width="180dp"
                android:layout_height="40dp">
                <EditText
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入您的验证码"
                    android:paddingHorizontal="30dp"
                    android:textSize="15sp" />
            </com.flyco.roundview.RoundRelativeLayout>


            <TextView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/text_red"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="115dp"
                android:layout_height="42dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dialog_cancel_bt"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="115dp"
                android:layout_height="42dp"
                android:background="@drawable/dialog_confirm_bt"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
