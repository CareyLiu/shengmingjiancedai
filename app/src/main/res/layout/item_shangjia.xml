<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_xx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:text="麦香村西饼屋(平房店）"
            android:textColor="#ff000000"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_image"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/star"
            style="@style/storeRatingBarOranger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/tv_shop_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_name" />


        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_addr_thing_xiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="平房区   蛋糕  销量:1"
            android:textColor="#ff666666"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/star"
            app:layout_constraintTop_toBottomOf="@+id/star" />


        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_zhekou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="享受8.5折优惠"
            android:textColor="#fffe9900"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_addr_thing_xiao"
            app:layout_constraintTop_toBottomOf="@+id/tv_addr_thing_xiao" />


        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:text="8.3KM"
            android:textColor="#ff666666"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hezuo_shangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/background_select"
            android:padding="4dp"
            android:text="合作商家"
            android:textColor="#fffe9900"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_distance"
            app:layout_constraintRight_toRightOf="@+id/tv_distance"
            app:layout_constraintTop_toBottomOf="@+id/tv_distance" />


        <View
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/tv_hezuo_shangjia"
            android:layout_width="match_parent"
            android:layout_height="14dp"/>
        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grayline_cecece"
            app:layout_constraintTop_toBottomOf="@+id/view" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>