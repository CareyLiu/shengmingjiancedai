<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_sousuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_shebei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="98pt" />

            <RelativeLayout
                android:id="@+id/rl_shuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="501pt"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="38pt"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="相应权限开启时，可自动发现蓝牙/Wi-Fi/网关/有线设备等设备"
                    android:textColor="@color/color_9"
                    android:textSize="27pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="154pt"
                    android:includeFontPadding="false"
                    android:text="请确保设备处于配网状态 >"
                    android:textColor="@color/color_main"
                    android:textSize="27pt" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="468pt"
                android:layout_height="468pt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="313pt"
                android:src="@mipmap/tuya_add_pic_circle" />

            <TextView
                android:id="@+id/bt_xiugai"
                android:layout_width="359pt"
                android:layout_height="96pt"
                android:layout_below="@+id/iv_search"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="121pt"
                android:background="@drawable/bg_wihte_line_main_radius45"
                android:gravity="center"
                android:text="修改配置Wi-Fi"
                android:textColor="@color/color_main"
                android:textSize="33pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bt_chongxinsousuo"
                android:layout_width="359pt"
                android:layout_height="96pt"
                android:layout_below="@+id/bt_xiugai"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20pt"
                android:background="@drawable/bt_radius45_s"
                android:gravity="center"
                android:text="重新搜索"
                android:textColor="@color/white"
                android:textSize="33pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_faxian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_search"
                android:layout_marginTop="138pt"
                android:layout_marginBottom="50pt"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:text="发现可用设备"
                    android:textColor="@color/color_3"
                    android:textSize="31pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bt_xiayibu"
                    android:layout_width="662pt"
                    android:layout_height="90pt"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bt_radius45_s"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="33pt"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_peizhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_huashu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:text="输入Wi-Fi密码"
                    android:textColor="#ff222222"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/ll_huashu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_huashu1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="目前暂不支持"
                        android:textColor="#ff999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:includeFontPadding="false"
                        android:text="5G"
                        android:textColor="#ff5e5e5e"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="频段的Wi-Fi"
                        android:textColor="#ff999999"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_huashu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:includeFontPadding="false"
                    android:text="以及酒店、机场等需要认证的Wi-Fi"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_huashu2" />


                <LinearLayout
                    android:id="@+id/ll_wifi_name"
                    android:layout_width="307dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="27dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_huashu3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/peiwang_icon_wifi" />

                    <TextView
                        android:id="@+id/tv_wifi_ming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textColor="#ff3b4b67"
                        android:textSize="14sp"
                        tools:text="TP-LINK_F33E" />
                </LinearLayout>


                <View
                    android:id="@+id/view_line"
                    android:layout_width="307dp"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="#FF999999"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_wifi_name" />


                <RelativeLayout
                    android:id="@+id/ll_wifi_mima"
                    android:layout_width="307dp"
                    android:layout_height="52dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_line">

                    <ImageView
                        android:id="@+id/iv_icon_mima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/peiwang_icon_mima" />

                    <EditText
                        android:id="@+id/et_wifi_mima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/iv_icon_mima"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="#ff3b4b67"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/iv_see_mima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|right" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_line_1"
                    android:layout_width="307dp"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="#FF999999"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_wifi_mima" />

                <TextView
                    android:id="@+id/tv_huashu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:text="请使用2.4G 频段的Wi-Fi"
                    android:textColor="#ff999999"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@+id/view_line_1"
                    app:layout_constraintTop_toBottomOf="@+id/view_line_1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_huashu4"
                    app:layout_constraintRight_toRightOf="@+id/view_line_1"
                    app:layout_constraintTop_toTopOf="@+id/tv_huashu4">

                    <ImageView
                        android:id="@+id/iv_peiwang_mima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="记住密码"
                        android:textColor="#ff999999"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rll_kaishilianjie"
                    android:layout_width="307dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="71dp"
                    android:background="@drawable/bt_radius24_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_huashu4" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>