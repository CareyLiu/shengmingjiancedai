<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_app">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="131pt"
        android:layout_marginHorizontal="31pt"
        android:layout_marginTop="31pt"
        android:background="@drawable/bg_white_radius_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="31pt">

        <ImageView
            android:id="@+id/iv_device"
            android:layout_width="84pt"
            android:layout_height="84pt"
            android:layout_centerInParent="true"
            android:layout_marginRight="31pt" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_3"
            android:textSize="31pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="46pt"
            android:layout_height="46pt" />
    </LinearLayout>
</LinearLayout>
