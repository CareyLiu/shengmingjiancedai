<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_heater"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/back_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="水暖加热器"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_set"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/navigatio_gengduo_white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_heater_host"
        android:layout_width="200dp"
        android:layout_height="154dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/shuinuan_pic_gif_nor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lianjie_ccid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击连接加热器ccid"
        android:textColor="#ffffffff"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_heater_host" />

    <TextView
        android:id="@+id/tv_shuiwen_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="28.8dp"
        android:includeFontPadding="false"
        android:text="加热器水温设定"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lianjie_ccid" />

    <TextView
        android:id="@+id/tv_shuiwen1"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/sheding_button_nor"
        android:gravity="center"
        android:text="60℃"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shuiwen_set" />


    <TextView
        android:id="@+id/tv_shuiwen2"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="13dp"
        android:background="@mipmap/sheding_button_nor"
        android:gravity="center"
        android:text="80℃"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shuiwen1" />

    <TextView
        android:id="@+id/tv_shuiwen_biao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="29dp"
        android:text="加热器水温设定"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_shuiwen_set" />


    <ImageView
        android:id="@+id/iv_shuinuan_ceng"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginTop="9dp"
        android:background="@mipmap/pan_shuinuan"
        app:layout_constraintLeft_toLeftOf="@+id/tv_shuiwen_biao"
        app:layout_constraintRight_toRightOf="@+id/tv_shuiwen_biao"
        app:layout_constraintTop_toBottomOf="@+id/tv_shuiwen_biao" />

    <ImageView
        android:id="@+id/iv_shuinuan_zhen"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@mipmap/zhen_shuinuan"
        app:layout_constraintLeft_toLeftOf="@+id/iv_shuinuan_ceng"
        app:layout_constraintTop_toTopOf="@+id/iv_shuinuan_ceng" />

    <ImageView
        android:id="@+id/btn_heater_close"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="31dp"
        android:background="@mipmap/car_close"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shuiwen2" />
</androidx.constraintlayout.widget.ConstraintLayout>