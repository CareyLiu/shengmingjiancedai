<?xml version="1.0" encoding="utf-8"?>
<com.mfang.consumer.widget.freshenview.view.header.TwitterRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_twitter"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivArrow"
            style="@style/empty_img"
            android:layout_above="@+id/tvRefresh"
            android:layout_centerInParent="true"
            android:src="@drawable/mf_icon_anim" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tvRefresh"
            android:background="@mipmap/qq_refresh_success" />

        <ImageView
            android:id="@+id/ivImage"
            style="@style/empty_img"
            android:layout_above="@+id/tvRefresh"
            android:layout_centerInParent="true"
            android:src="@drawable/mf_icon_anim" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tvRefresh"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="?attr/android:textColorPrimary" />
    </RelativeLayout>
</com.mfang.consumer.widget.freshenview.view.header.TwitterRefreshHeaderView>