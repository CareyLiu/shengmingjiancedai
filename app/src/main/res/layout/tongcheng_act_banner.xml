<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="720pt">

                <RelativeLayout
                    android:id="@+id/ll_no_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_app"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="123pt"
                        android:layout_height="123pt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="230pt"
                        android:src="@mipmap/shopxiangqing_pic_none" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="392pt"
                        android:includeFontPadding="false"
                        android:text="暂未上传图片"
                        android:textColor="@color/color_3"
                        android:textSize="31pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="458pt"
                        android:includeFontPadding="false"
                        android:text="请点击加号按钮，完善商品信息"
                        android:textColor="@color/color_3"
                        android:textSize="31pt"
                        android:textStyle="bold" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="65dp"
                    android:layout_height="31dp"
                    android:layout_gravity="bottom|right"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_delete" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="14dp"
                android:text="商品主图"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30pt"
                android:paddingLeft="31pt" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
