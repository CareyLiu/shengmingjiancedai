<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_ewm"
        android:layout_width="550pt"
        android:layout_height="550pt"
        android:layout_marginTop="80pt"
        android:background="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30pt"
        android:includeFontPadding="false"
        android:text="将二维码正对摄像头，保持15-20cm距离"
        android:textColor="@color/text_color_9"
        android:textSize="27pt" />


    <ImageView
        android:layout_width="300pt"
        android:layout_height="96pt"
        android:layout_marginTop="30pt"
        android:src="@mipmap/camera_tishi" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70pt"
        android:layout_marginTop="30pt"
        android:includeFontPadding="false"
        android:text="听到提示音后，请耐心等待，当前摄像头处于联网中。\n如果长时间没有听到提示音：\n1、确保摄像头处于配网状态 \n2、确保二维码正对摄像头并且保持15-20cm距离"
        android:textColor="@color/text_color_9"
        android:textSize="27pt" />
</LinearLayout>